<button type="button" class="remove-btn-lg remove-clyde-product btn btn-light mr-5" data-toggle="modal"
        data-target=".cart.cart-page #removeClydeProductModal" data-pid="${lineItem.id}"
        data-name="${lineItem.options.length > 0 ? lineItem.options[0].lineItemText : null}"
        data-action="${URLUtils.url("Cart-RemoveClydeProduct")}"
        data-uuid="${lineItem.UUID}"
        aria-label="${Resource.msgf('text.remove.line.item','cart', null, lineItem.options[0].lineItemText)}">
    <span aria-hidden="true">&times;</span>
</button>
